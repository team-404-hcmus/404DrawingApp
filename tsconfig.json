{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "typeRoots": ["./src/GLSL.d.ts"],
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "node_modules/*"
  ]
}